
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>

    <div style="text-align:center"><h2>Login Form</h2></div>
    @using (Html.BeginForm("LoginVerify", "Home", FormMethod.Post))
    {
        <div class="imgcontainer">

            <img src="~/images/Loginicon.png" style="border:1px solid black; border-radius:100%;height:100px;width:100px;" />
        </div>
       
        <div class="container" style="text-align:center">
            <label class="danger" style="color:red">@ViewBag.Error</label><br/>
            <label for="uname"><b>Username:</b></label>
            <input type="text" placeholder="Enter Username" name="username" required style="border-radius:10%;">
            <br />
            <label for="psw"><b>Password:</b></label>
            <input type="password" placeholder="Enter Password" name="password" required style="border-radius:10%;">
            <br />
            <button type="submit" style="width:100px;">Login</button>
        </div>
    }
   

</body>
</html>

